<%- include('templates/header.ejs') %> <%- include('./EmployerNavbar.ejs') %>
<div class="show-candidates">
	<div class="container">
		<div class="card">
			<div class="card-content">
				<span class="card-title">Job #<%= job._id %></span>
				<p>
					Status
					<span class="jobTitle <%= job.isJobOpen %>"
						><%= job.isJobOpen ? "Open" : "Closed" %></span
					>
				</p>
				<div class="imp-details">
					<p>
						Role - <%= job.title %>
						<br />
					</p>
					<p>
						Location - <%= job.location %>
						<br />
					</p>
					<p>
						Company - <%= job.company %>
						<br />
					</p>
					<p>Posted on - <%= job.date %></p>
				</div>
			</div>
			<div class="card-action">
				<a
					class="tooltipped btn-floating btn-small waves-effect waves-light cyan"
					href="/jobs/employer/<%= job._id %>/edit"
					data-position="bottom"
					data-tooltip="Edit"
					><i class="material-icons">edit</i></a
				>
				<form action="/jobs/employer/<%= job._id %>?_method=DELETE" method="POST">
					<button
						class="tooltipped btn-floating btn-small waves-effect waves-light red darken-1"
						data-position="bottom"
						data-tooltip="Delete"
					>
						<i class="material-icons">delete</i>
					</button>
				</form>
			</div>
		</div>
	</div>
	<div class="container">
		<ul class="collapsible expandable">
			<li>
				<div class="collapsible-header center-align">
					<h6 class="center-align">Interested Candidates</h6>
				</div>
			</li>
			<% job.candidatesWhoAccepted.forEach((aCandidate, index) => { %>
			<li>
				<div class="collapsible-header">
					<i class="material-icons">arrow_drop_down_circle</i>
					<span>Candidate #<%= index + 1 %> - <%= aCandidate.name %></span>
				</div>
				<div class="collapsible-body">
					<p>Name - <%= aCandidate.name %></p>
					<p>Email - <%= aCandidate.username %></p>
					<p>Phone Number - <%= aCandidate.phoneNumber %></p>
				</div>
			</li>
			<% }) %>
		</ul>
	</div>
</div>
<%- include('templates/footer.ejs') %>

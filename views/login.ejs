<%- include('templates/header.ejs') %>
<div class="auth">
	<div class="left login"></div>
	<div class="right blue-grey lighten-5">
		<div class="container">
			<div class="row">
				<p class="title">Login</p>
				<p class="other-option">
					Don't have an account ? <a href="/auth/register">Create One</a>
				</p>
			</div>
			<div class="row">
				<form class="col s12" action="/auth/login" method="POST">
					<div class="row">
						<div class="input-field col s12">
							<input
								id="email"
								type="email"
								class="validate"
								required
								name="username"
							/>
							<label for="email">Email</label>
							<span class="helper-text" data-error="wrong" data-success="right">
								Enter the email
							</span>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input
								id="password"
								type="password"
								class="validate"
								required
								name="password"
							/>
							<label for="password">Password</label>
							<span class="helper-text" data-error="wrong" data-success="right">
								Enter the password
							</span>
						</div>
					</div>
					<div class="row center-align">
						<button class="btn waves-effect waves-light" type="submit" name="action">
							Login
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<%- include('templates/footer.ejs') %>

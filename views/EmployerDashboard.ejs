<%- include('templates/header.ejs') %> <%- include('./EmployerNavbar.ejs') %>
<div class="jobs">
	<div class="container">
		<div class="container header pink lighten-2">
			<h1>All your jobs</h1>
		</div>
		<div class="row">
			<% jobs.forEach(aJob => { %>
			<div class="col s12 m6 l4">
				<div class="card">
					<div class="card-content">
						<span class="card-title">Job #<%= aJob._id %></span>
						<p>
							Status
							<span class="jobTitle <%= aJob.isJobOpen %>"
								><%= aJob.isJobOpen ? "Open" : "Closed" %></span
							>
						</p>
						<div class="imp-details">
							<p>
								Role - <%= aJob.title %>
								<br />
							</p>
							<p>
								Location - <%= aJob.location %>
								<br />
							</p>
							<p>
								Company - <%= aJob.company %>
								<br />
							</p>
							<p>Posted on - <%= aJob.date %></p>
						</div>
					</div>
					<div class="card-action">
						<a
							class="tooltipped btn-floating btn-small waves-effect waves-light cyan"
							href="/jobs/employer/<%= aJob._id %>/edit"
							data-position="bottom"
							data-tooltip="Edit"
							><i class="material-icons">edit</i></a
						>
						<!-- <a
							class="
								tooltipped
								btn-floating btn-small
								waves-effect waves-light
								light-green
								darken-1
							"
							href="/jobs/<%= aJob._id %>"
							data-position="bottom"
							data-tooltip="Get Info"
							><i class="material-icons">info</i></a
						> -->
						<form action="/jobs/employer/<%= aJob._id %>?_method=DELETE" method="POST">
							<button
								class="
									tooltipped
									btn-floating btn-small
									waves-effect waves-light
									red
									darken-1
								"
								data-position="bottom"
								data-tooltip="Delete"
							>
								<i class="material-icons">delete</i>
							</button>
						</form>
					</div>
				</div>
			</div>
			<% }) %>
		</div>
	</div>

	<div class="fixed-action-btn">
		<a
			href="/jobs/employer/new"
			data-position="left"
			data-tooltip="Add a new connection"
			class="tooltipped btn-floating btn-large orange pulse"
		>
			<i class="large material-icons">add</i>
		</a>
	</div>
</div>
<%- include('templates/footer.ejs') %>
